@page "/staff"

@attribute [Authorize]

@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Kinderhub.Data.Models
@using Kinderhub.Data
@inject IDbContextFactory<Kinderhub.Data.ApplicationDbContext> DbFactory
@implements IAsyncDisposable

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="staff/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Staff">
    <PropertyColumn Property="staff => staff.FirstName" Title="First Name" />
    <PropertyColumn Property="staff => staff.LastName" Title="Last Name" />
    <PropertyColumn Property="staff => staff.Role" />

    <TemplateColumn Context="staff">
        <a href="@($"staff/edit?id={staff.Id}")">Edit</a> |
        <a href="@($"staff/details?id={staff.Id}")">Details</a> |
        <a href="@($"staff/delete?id={staff.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
